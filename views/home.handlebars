{{#if role}}
<div class="header clearfix">
	<nav>
	  <ul class="nav nav-pills pull-right">
	    <form method="get" action="/user/manageUsers">
	      <button type="submit" class="btn btn-default">Manage Users</button>
	    </form>
	  </ul>
	</nav>
</div>
{{/if}}


{{#if forms}}
<h4 class="text-muted">Forms</h4>
  <div>
      <table class="table table-bordered">
        <tbody>
            {{#each forms}}
            <tr>
                <td><form method="post" action="/form">
                      <input type="hidden" name="formId" value="{{_id}}"/>
                      <input type="hidden" name="formName" value="{{formName}}"/>
                      <button type="submit" class="btn btn-link">{{formName}}</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  </div>
{{/if}}