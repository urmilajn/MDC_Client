{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}

  <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          <form method="get" action="/customer/manageUsers">
            <button type="submit" class="btn btn-default" formaction="/customer/manageForms">Manage Forms</button>
            <button type="submit" class="btn btn-default" formaction="/customer/manageUsers">Manage Users</button>
        </form>
    </ul>
</nav>
<h4 class="text-muted">{{customerName}}</h4>
</div>

<form method="post" action="/customer/addUser">

<div class="form-group required">
  <label class="control-label">Username</label>
  <input type="text" class="form-control" name="username" placeholder="Username"/>
</div>

<div class="form-group required">
  <label class="control-label">Password</label>
  <input type="text" class="form-control" name="password" placeholder="Password"/>
</div>

<div class="form-group required" name="role">
  <label class="control-label">Role</label>
  <select class="form-control" name="role">
      <option value="" disabled selected hidden>Select Role</option>
      <option value="employee">Employee</option>
      <option value="manager">Manager</option>
      <option value="regionalManager">Regional Manager</option>      
  </select>
</div>

<div class="form-group required">
  <label class="control-label">Locations</label>
  <select class="form-control" name="locations" multiple="multiple">
    {{#each locations}}
        <option value="{{.}}">{{.}}</option>
    {{/each}}    
  </select>
</div>

<button type="submit" class="btn btn-default">Add</button>
<button type="submit" class="btn btn-default" formaction="/customer/cancelUser">Cancel</button>

</form>