{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<div class="header clearfix">
	<nav>
	  <ul class="nav nav-pills pull-right">
	    <form method="get" action="/user/manageUsers">
	      <button type="submit" class="btn btn-default">Manage Users</button>
	    </form>
	  </ul>
	</nav>
</div>

{{#if managers}}
  <div>
      <table class="table table-bordered">
        <thead>
            <th>Username</th> 
            <th>Role</th>
            <th>Locations</th> 
            <th>Status</th>
        </thead> 
        <tbody> 
            {{#each managers}} 
            <tr>
                <td>{{username}}</td>
                <td>{{role}}</td>
                <td>{{locations}}</td>
                <td>{{status}}</td>
            </tr>
            {{/each}} 
        </tbody> 
    </table>
</div>
{{/if}}